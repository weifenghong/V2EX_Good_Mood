{
  "manifest_version": 3,
  "name": "V2EX Good Mood",
  "description": "V2EX Good Mood",
  "version": "1.0.0",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.v2ex.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "default_icon.png",
      "48": "default_icon.png",
      "128": "default_icon.png"
    }
  },
  "icons": {
    "16": "default_icon.png",
    "48": "default_icon.png",
    "128": "default_icon.png"
  }
}
